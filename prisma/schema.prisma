generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    username     String @id // Змінено з Int на String, бо varchar(20)
    passwordHash String @map("password_hash") // Відповідність назві колонки
    passwordSalt String @map("password_salt") // Відповідність назві колонки
    notes        Note[] // Зв’язок із notes
}

model Note {
    id        String   @id // uuid у SQL
    owner     String // varchar(20)
    title     String // varchar(30)
    createdAt DateTime @map("created_at") // Відповідність назві
    updatedAt DateTime @map("updated_at") // Відповідність назві
    user      User     @relation(fields: [owner], references: [username])
}
